{% extends "base.html.twig" %}

{% block body %}
<div class="row">
    <div class="col-4">
        <h4>Articles</h4>
        <a href="{{ path('add_article') }}">Ajouter un article</a>
        <ul>
            {% for article in articles %}
                <li>
                    {{ article.id }}   {{ article.slug }}
                    {# <a href="/showArticle/{{article.id}}">Details</a> #}
                    <a href="{{ path('show_article', {'id': article.id }) }}">Details</a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="col-4">
    <h4>Categories</h4>
    <a href="{{ path('add_category') }}">Ajouter une categorie</a>
    <ul>
        {% for category in categories %}
            <li>
                {{ category.id }}   {{ category.name }}
                {# <a href="/showCategory/{{category.id}}">Details</a> #}
                <a href="{{ path('show_category', {'name': category.name }) }}">Details</a>
            </li>
        {% endfor %}
        </ul>
    </div>
    <div class="col-4">
    <h4>Tags :</h4>
    <a href="{{ path('add_tag') }}">Ajouter un tag</a>
    <ul>
        {% for tag in tags %}
            <li>{{ tag.name }} <a href="{{ path('show_tag', {'id': tag.id }) }}">Details</a></li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>
    </div>
</div>

 {# <a href="http://localhost:8000/category/Javascript">Go to javascript category</a> #}

{% endblock %}